    <script>
        // ============================================
        // CONFIGURAÇÃO DO EMAILJS
        // ============================================
        // 1. Crie uma conta gratuita em: https://www.emailjs.com
        // 2. Crie um serviço de email (Gmail, Outlook, etc.)
        // 3. Crie um template de email
        // 4. Cole suas credenciais abaixo:
        
        const EMAILJS_CONFIG = {
            SERVICE_ID: 'service_telemedicina', // Troque pelo seu Service ID
            TEMPLATE_ID: 'template_agendamento', // Troque pelo seu Template ID
            USER_ID: 'user_XXXXXXXXXXXXX', // Troque pelo seu Public Key
            TO_EMAIL: 'contato@drcarlossilva.com', // Seu email para receber agendamentos
            REPLY_TO: 'noreply@drcarlossilva.com' // Email para replies
        };
        
        // Carregar EmailJS
        (function() {
            // Carregar script do EmailJS
            const script = document.createElement('script');
            script.src = 'https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js';
            script.onload = function() {
                // Inicializar EmailJS após carregar o script
                if (typeof emailjs !== 'undefined') {
                    emailjs.init(EMAILJS_CONFIG.USER_ID);
                    console.log('EmailJS inicializado com sucesso!');
                }
            };
            document.head.appendChild(script);
        })();
        
        // ============================================
        // ELEMENTOS DO FORMULÁRIO
        // ============================================
        const appointmentForm = document.getElementById('appointmentForm');
        const successMessage = document.getElementById('successMessage');
        const errorMessage = document.getElementById('errorMessage');
        const errorText = document.getElementById('errorText');
        const loading = document.getElementById('loading');
        const submitBtn = document.getElementById('submitBtn');
        const userEmail = document.getElementById('userEmail');
        
        // ============================================
        // CONFIGURAR DATAS
        // ============================================
        const today = new Date();
        const tomorrow = new Date(today);
        tomorrow.setDate(tomorrow.getDate() + 1);
        
        // Data mínima para agendamento (amanhã)
        const preferredDateInput = document.getElementById('preferred_date');
        preferredDateInput.min = tomorrow.toISOString().split('T')[0];
        
        // Data máxima para agendamento (90 dias)
        const maxDate = new Date(today);
        maxDate.setDate(maxDate.getDate() + 90);
        preferredDateInput.max = maxDate.toISOString().split('T')[0];
        
        // Data máxima para nascimento (120 anos atrás)
        const birthdateInput = document.getElementById('birthdate');
        const minBirthdate = new Date(today);
        minBirthdate.setFullYear(minBirthdate.getFullYear() - 120);
        birthdateInput.max = today.toISOString().split('T')[0];
        birthdateInput.min = minBirthdate.toISOString().split('T')[0];
        
        // ============================================
        // MENU MOBILE CORRIGIDO
        // ============================================
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        
        mobileMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('active');
            mobileMenuBtn.innerHTML = mobileMenu.classList.contains('active') 
                ? '<i class="fas fa-times"></i>' 
                : '<i class="fas fa-bars"></i>';
        });
        
        // Fechar menu ao clicar em link
        const mobileLinks = document.querySelectorAll('.mobile-menu a');
        mobileLinks.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.remove('active');
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            });
        });
        
        // Fechar menu ao clicar fora
        document.addEventListener('click', (e) => {
            if (!mobileMenu.contains(e.target) && !mobileMenuBtn.contains(e.target) && mobileMenu.classList.contains('active')) {
                mobileMenu.classList.remove('active');
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            }
        });
        
        // ============================================
        // SLIDER DE DEPOIMENTOS
        // ============================================
        const testimonials = [
            {
                text: "Dr. Carlos é excepcional! A teleconsulta foi tão eficiente quanto uma consulta presencial. Recebi o diagnóstico correto e a receita digital chegou em minutos.",
                author: "Maria Santos",
                role: "Paciente há 2 anos",
                rating: 5,
                avatar: "https://randomuser.me/api/portraits/women/32.jpg"
            },
            {
                text: "Como trabalho home office, a teleconsulta revolucionou meus cuidados com a saúde. O Dr. Carlos é muito atencioso e resolveu meu problema sem que eu precisasse me deslocar.",
                author: "João Oliveira",
                role: "Paciente há 1 ano",
                rating: 5,
                avatar: "https://randomuser.me/api/portraits/men/54.jpg"
            },
            {
                text: "Atendimento humanizado e profissional. A plataforma é fácil de usar e o médico dedicou todo o tempo necessário para entender meu caso. Recomendo!",
                author: "Ana Costa",
                role: "Paciente há 6 meses",
                rating: 5,
                avatar: "https://randomuser.me/api/portraits/women/67.jpg"
            }
        ];
        
        const testimonialsTrack = document.getElementById('testimonialsTrack');
        const sliderNav = document.getElementById('sliderNav');
        
        if (testimonialsTrack && sliderNav) {
            testimonials.forEach((testimonial, index) => {
                // Criar card de depoimento
                const testimonialCard = document.createElement('div');
                testimonialCard.className = 'testimonial-card';
                testimonialCard.innerHTML = `
                    <div class="testimonial-rating">
                        ${'★'.repeat(testimonial.rating)}${'☆'.repeat(5 - testimonial.rating)}
                    </div>
                    <p class="testimonial-text">"${testimonial.text}"</p>
                    <div class="testimonial-author">
                        <img src="${testimonial.avatar}" alt="${testimonial.author}" class="author-avatar">
                        <div>
                            <h4>${testimonial.author}</h4>
                            <p>${testimonial.role}</p>
                        </div>
                    </div>
                `;
                testimonialsTrack.appendChild(testimonialCard);
                
                // Criar ponto de navegação
                const dot = document.createElement('div');
                dot.className = `slider-dot ${index === 0 ? 'active' : ''}`;
                dot.dataset.index = index;
                dot.addEventListener('click', () => goToSlide(index));
                sliderNav.appendChild(dot);
            });
            
            let currentSlide = 0;
            
            function goToSlide(index) {
                currentSlide = index;
                testimonialsTrack.style.transform = `translateX(-${index * 100}%)`;
                
                // Atualizar dots ativos
                document.querySelectorAll('.slider-dot').forEach((dot, i) => {
                    dot.classList.toggle('active', i === index);
                });
            }
            
            // Auto-play slider
            setInterval(() => {
                currentSlide = (currentSlide + 1) % testimonials.length;
                goToSlide(currentSlide);
            }, 5000);
        }
        
        // ============================================
        // GERAR MENSAGEM PARA EMAIL
        // ============================================
        function generateEmailMessage(formData) {
            // Calcular idade
            let age = '';
            if (formData.birthdate) {
                const birthDate = new Date(formData.birthdate);
                const ageDifMs = Date.now() - birthDate.getTime();
                const ageDate = new Date(ageDifMs);
                age = Math.abs(ageDate.getUTCFullYear() - 1970) + ' anos';
            }
            
            // Formatar data
            const formatDate = (dateString) => {
                const date = new Date(dateString);
                return date.toLocaleDateString('pt-BR', {
                    weekday: 'long',
                    day: '2-digit',
                    month: 'long',
                    year: 'numeric'
                });
            };
            
            // Criar mensagem formatada
            return {
                subject: `Novo Agendamento: ${formData.name}`,
                text: `NOVO AGENDAMENTO - SITE DR. CARLOS SILVA

DADOS DO PACIENTE:
Nome: ${formData.name}
Email: ${formData.email}
Telefone: ${formData.phone}
Data de Nascimento: ${formData.birthdate || 'Não informada'} ${age ? `(${age})` : ''}

AGENDAMENTO SOLICITADO:
Data: ${formatDate(formData.preferred_date)}
Horário: ${formData.preferred_time}
Urgência: ${formData.urgency || 'Não especificada'}

MOTIVO DA CONSULTA:
${formData.symptoms || 'Não especificado'}

DATA DO PEDIDO: ${new Date().toLocaleString('pt-BR')}

---
Este agendamento foi solicitado através do site oficial.
Por favor, entre em contato com o paciente para confirmação.`
            };
        }
        
        // ============================================
        // ENVIAR PARA EMAIL
        // ============================================
        async function sendToEmail(formData) {
            try {
                // Validar dados obrigatórios
                if (!formData.name || !formData.email || !formData.phone || 
                    !formData.preferred_date || !formData.preferred_time) {
                    throw new Error('Por favor, preencha todos os campos obrigatórios.');
                }
                
                // Validar email
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(formData.email)) {
                    throw new Error('Por favor, insira um endereço de email válido.');
                }
                
                // Validar telefone
                const phoneRegex = /^\(\d{2}\) \d{4,5}-\d{4}$/;
                if (!phoneRegex.test(formData.phone)) {
                    throw new Error('Por favor, insira um número de telefone válido (com DDD).');
                }
                
                // Validar data do agendamento
                const preferredDate = new Date(formData.preferred_date);
                const tomorrow = new Date();
                tomorrow.setDate(tomorrow.getDate() + 1);
                
                if (preferredDate < tomorrow) {
                    throw new Error('A data do agendamento deve ser a partir de amanhã.');
                }
                
                // Gerar mensagem
                const message = generateEmailMessage(formData);
                
                // Verificar se EmailJS está carregado
                if (typeof emailjs === 'undefined') {
                    throw new Error('Sistema de email não carregado. Por favor, recarregue a página.');
                }
                
                // Preparar dados para EmailJS
                const templateParams = {
                    to_email: EMAILJS_CONFIG.TO_EMAIL,
                    from_name: formData.name,
                    from_email: formData.email,
                    reply_to: formData.email,
                    phone: formData.phone,
                    birthdate: formData.birthdate || 'Não informada',
                    preferred_date: formatDateForEmail(formData.preferred_date),
                    preferred_time: formData.preferred_time,
                    urgency: formData.urgency || 'Não especificada',
                    symptoms: formData.symptoms || 'Não informado',
                    message: message.text,
                    subject: message.subject,
                    timestamp: new Date().toLocaleString('pt-BR')
                };
                
                // Enviar email via EmailJS
                const response = await emailjs.send(
                    EMAILJS_CONFIG.SERVICE_ID,
                    EMAILJS_CONFIG.TEMPLATE_ID,
                    templateParams
                );
                
                // Salvar no localStorage como backup
                saveToLocalStorage(formData, message);
                
                // Track conversion
                trackConversion(formData);
                
                return { 
                    success: true, 
                    data: response,
                    email: formData.email
                };
                
            } catch (error) {
                console.error('Erro ao enviar email:', error);
                return { 
                    success: false, 
                    error: error.message || 'Erro ao enviar o agendamento. Por favor, tente novamente.'
                };
            }
        }
        
        // ============================================
        // FORMATAR DATA PARA EMAIL
        // ============================================
        function formatDateForEmail(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('pt-BR', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric'
            });
        }
        
        // ============================================
        // SALVAR NO LOCALSTORAGE (BACKUP)
        // ============================================
        function saveToLocalStorage(formData, message) {
            try {
                const appointments = JSON.parse(localStorage.getItem('email_appointments') || '[]');
                
                appointments.push({
                    id: Date.now(),
                    ...formData,
                    message: message.text,
                    timestamp: new Date().toISOString(),
                    status: 'pending'
                });
                
                // Manter apenas os últimos 50 agendamentos
                if (appointments.length > 50) {
                    appointments.shift();
                }
                
                localStorage.setItem('email_appointments', JSON.stringify(appointments));
                console.log('Agendamento salvo no localStorage:', appointments.length);
                
            } catch (e) {
                console.warn('Não foi possível salvar no localStorage:', e);
            }
        }
        
        // ============================================
        // TRACK CONVERSION
        // ============================================
        function trackConversion(formData) {
            // Google Analytics
            if (typeof gtag !== 'undefined') {
                gtag('event', 'email_agendamento', {
                    'event_category': 'conversion',
                    'event_label': 'email_form',
                    'value': 1
                });
            }
            
            // Facebook Pixel
            if (typeof fbq !== 'undefined') {
                fbq('track', 'Lead', {
                    content_name: 'Email Agendamento',
                    content_category: 'Telemedicina'
                });
            }
        }
        
        // ============================================
        // MÁSCARA DE TELEFONE
        // ============================================
        const phoneInput = document.getElementById('phone');
        if (phoneInput) {
            phoneInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                
                if (value.length > 11) {
                    value = value.substring(0, 11);
                }
                
                if (value.length > 10) {
                    value = value.replace(/^(\d{2})(\d{5})(\d{4}).*/, '($1) $2-$3');
                } else if (value.length > 6) {
                    value = value.replace(/^(\d{2})(\d{4})(\d{0,4}).*/, '($1) $2-$3');
                } else if (value.length > 2) {
                    value = value.replace(/^(\d{2})(\d{0,5})/, '($1) $2');
                } else if (value.length > 0) {
                    value = value.replace(/^(\d*)/, '($1');
                }
                
                e.target.value = value;
            });
        }
        
        // ============================================
        // SUBMIT DO FORMULÁRIO
        // ============================================
        appointmentForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Mostrar loading
            loading.style.display = 'block';
            successMessage.style.display = 'none';
            errorMessage.style.display = 'none';
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ENVIANDO...';
            
            // Coletar dados
            const formData = new FormData(appointmentForm);
            const data = Object.fromEntries(formData);
            
            // Enviar para Email
            const result = await sendToEmail(data);
            
            // Esconder loading
            loading.style.display = 'none';
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Enviar Solicitação de Agendamento';
            
            if (result.success) {
                // Mostrar mensagem de sucesso
                userEmail.textContent = result.email;
                successMessage.style.display = 'block';
                appointmentForm.style.display = 'none';
                
                // Scroll para mensagem de sucesso
                successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
                
                // Resetar formulário após 10 segundos
                setTimeout(() => {
                    appointmentForm.reset();
                    appointmentForm.style.display = 'block';
                    successMessage.style.display = 'none';
                }, 10000);
                
            } else {
                // Mostrar erro
                errorText.textContent = result.error;
                errorMessage.style.display = 'block';
                
                // Scroll para mensagem de erro
                errorMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
                
                // Focar no primeiro campo com erro
                if (result.error.includes('email')) {
                    document.getElementById('email').focus();
                } else if (result.error.includes('telefone')) {
                    document.getElementById('phone').focus();
                } else if (result.error.includes('nome')) {
                    document.getElementById('name').focus();
                } else if (result.error.includes('data')) {
                    document.getElementById('preferred_date').focus();
                }
            }
        });
        
        // ============================================
        // FUNÇÕES AUXILIARES
        // ============================================
        function showPrivacyPolicy() {
            alert(`POLÍTICA DE PRIVACIDADE

1. Coleta de Dados: Coletamos apenas os dados necessários para o agendamento da consulta.

2. Uso dos Dados: Seus dados serão usados exclusivamente para:
   - Processar seu agendamento
   - Entrar em contato para confirmação
   - Enviar informações sobre sua consulta

3. Segurança: Seus dados são protegidos com criptografia e nunca serão compartilhados com terceiros.

4. Seus Direitos: Você pode solicitar a exclusão de seus dados a qualquer momento.

Para mais informações, entre em contato: contato@drcarlossilva.com`);
            return false;
        }
        
        function showTerms() {
            alert(`TERMOS DE USO

1. Agendamento: O agendamento está sujeito à disponibilidade de horários.

2. Confirmação: O agendamento só será considerado confirmado após contato da nossa equipe.

3. Cancelamento: Para cancelar ou reagendar, entre em contato com 24h de antecedência.

4. Teleconsulta: É necessário ter conexão com internet e dispositivo com câmera.

5. Pagamento: Informações sobre valores serão fornecidas na confirmação do agendamento.`);
            return false;
        }
        
        // ============================================
        // SMOOTH SCROLL PARA ÂNCORAS
        // ============================================
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    const headerHeight = document.querySelector('header').offsetHeight;
                    const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - headerHeight;
                    
                    window.scrollTo({
                        top: targetPosition,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // ============================================
        // EFEITO DE SCROLL NO HEADER
        // ============================================
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.style.boxShadow = 'var(--shadow-md)';
                header.style.background = 'rgba(255, 255, 255, 0.98)';
            } else {
                header.style.boxShadow = 'var(--shadow-sm)';
                header.style.background = 'rgba(255, 255, 255, 0.98)';
            }
        });
        
        // ============================================
        // INICIALIZAÇÃO
        // ============================================
        console.log('Sistema de agendamento por EmailJS carregado!');
        console.log('Para configurar:');
        console.log('1. Crie conta em https://www.emailjs.com');
        console.log('2. Configure SERVICE_ID, TEMPLATE_ID e USER_ID');
        console.log('3. Altere TO_EMAIL para seu email');
        
        // Exportar agendamentos (para desenvolvimento)
        window.exportAppointments = function() {
            try {
                const appointments = JSON.parse(localStorage.getItem('email_appointments') || '[]');
                
                if (appointments.length === 0) {
                    alert('Nenhum agendamento salvo ainda.');
                    return;
                }
                
                // Criar CSV
                let csv = 'Data,Nome,Email,Telefone,Data Nascimento,Data Agendamento,Horário,Urgência,Status\n';
                
                appointments.forEach(app => {
                    csv += `"${new Date(app.timestamp).toLocaleString('pt-BR')}",`;
                    csv += `"${app.name}",`;
                    csv += `"${app.email}",`;
                    csv += `"${app.phone}",`;
                    csv += `"${app.birthdate || ''}",`;
                    csv += `"${app.preferred_date}",`;
                    csv += `"${app.preferred_time}",`;
                    csv += `"${app.urgency || ''}",`;
                    csv += `"${app.status}"\n`;
                });
                
                // Criar blob e download
                const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
                const link = document.createElement('a');
                const url = URL.createObjectURL(blob);
                
                link.setAttribute('href', url);
                link.setAttribute('download', `agendamentos_${new Date().toISOString().split('T')[0]}.csv`);
                link.style.visibility = 'hidden';
                
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                
                console.log(`Exportados ${appointments.length} agendamentos`);
                
            } catch (error) {
                console.error('Erro ao exportar:', error);
                alert('Erro ao exportar agendamentos.');
            }
        };
    </script>
</body>
</html>
